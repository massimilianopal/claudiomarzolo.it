---
interface Props {
  variant?: string;
  size?: number;
  opacity?: number;
  ornament?: boolean;
  ornamentSymbol?: string;
}

const {
  variant = "classic-1",
  size = 24,
  opacity = 0.6,
  ornament = false,
  ornamentSymbol = "",
} = Astro.props;

const src = `/ui/dividers/divider-${variant}.svg`;
---

<div class:list={["divider", ornament && "divider--ornament"]} aria-hidden="true">
  <span class="divider__line"></span>
  <img class="divider__mark" src={src} alt="" style={`height:${size}px;opacity:${opacity};`} loading="lazy" />
  {ornament && <span class="divider__ornament">{ornamentSymbol}</span>}
  <span class="divider__line"></span>
</div>