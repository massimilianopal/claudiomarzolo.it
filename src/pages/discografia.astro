<BaseLayout title="Discografia" lang="it">
  <article class="page disco-page">
    <header class="page-head">
      <h1>Discografia</h1>

    </header>

    <figure class="hero frame">
      <img
        src="/img/header_media2.jpg"
        alt=""
        width="1218"
        height="180"
        loading="eager"
        decoding="async"
      />
    </figure>

    <div class="album-list">
      {albums.map((a, idx) => (
        <section class="album-entry" aria-labelledby={`a-${idx}`}>
          <div class="album-entry__covers" aria-label="Copertine">
            {a.images.map((img, i) => (
              <a
                class="album-entry__cover frame"
                href={img.src}
                target="_blank"
                rel="noopener noreferrer"
                aria-label={`${a.title} (${i === 0 ? "fronte" : "retro"}) - apre immagine`}
                title={`${a.title} (${i === 0 ? "fronte" : "retro"})`}
              >
                <img src={img.src} alt="" width={img.width} height={img.height} loading="lazy" decoding="async" />
              </a>
            ))}
          </div>

          <div class="album-entry__content prose">
            <h3 id={`a-${idx}`}>{a.title}</h3>
            <p class="album-entry__artist">{a.artist}</p>

            <p class="album-entry__meta">
              <span>{a.year}</span>
              <span class="album-entry__sep">*</span>
              <span>{a.genre}</span>
            </p>

            {a.credits?.length > 0 && (
              <ul class="album-entry__credits">
                {a.credits.map((c) => (
                  <li>{c}</li>
                ))}
              </ul>
            )}
          </div>
        </section>
      ))}
    </div>
  </article>
</BaseLayout>