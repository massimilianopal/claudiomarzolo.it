<BaseLayout title="Pubblicazioni" lang="it">
  <article class="page pubs-page">
    <header class="page-head">
      <h1>Pubblicazioni</h1>
      <hr />
    </header>

    <figure class="hero frame">
      <img
        src="/img/header_download.jpg"
        alt=""
        width="1218"
        height="180"
        loading="eager"
        decoding="async"
      />
    </figure>

    <div class="pubs-list">
      {publications.map((pub, idx) => {
        const purchaseLinks = pub.purchase ?? [];

        return (
          <section class="pub-entry" aria-labelledby={`p-${idx}`}>
            <a
              class="pub-entry__cover frame"
              href={pub.cover.src}
              target="_blank"
              rel="noopener noreferrer"
              aria-label={`${pub.title} (apri immagine)`}
              title={`${pub.title}`}
            >
              <img
                src={pub.cover.src}
                alt=""
                width={pub.cover.width}
                height={pub.cover.height}
                loading="lazy"
                decoding="async"
              />
            </a>

            <div class="pub-entry__content prose">
              <header class="pub-entry__top">
                <h3 id={`p-${idx}`}>{pub.title}</h3>

                {pub.comingSoon && (
                  <p class="pub-entry__badge" aria-label="Prossima pubblicazione">
                    Prossima pubblicazione
                  </p>
                )}
              </header>

              {pub.tagline && <p class="pub-entry__tagline">{pub.tagline}</p>}

              {pub.description?.map((p) => (
                <p>{p}</p>
              ))}

              {(pub.includesCd || pub.ean) && (
                <p class="pub-entry__meta">
                  {pub.includesCd && <span>Include CD</span>}
                  {pub.includesCd && pub.ean && <span class="pub-entry__sep">*</span>}
                  {pub.ean && <span>EAN: {pub.ean}</span>}
                </p>
              )}

              {purchaseLinks.length > 0 && (
                <div class="pub-entry__buy" aria-label="Link acquisto">
                  <span>Link per acquistare: </span>
                  <ul class="pub-entry__buy-list">
                    {purchaseLinks.map((link) => (
                      <li>
                        <a href={link.href} target="_blank" rel="noopener noreferrer">
                          {link.text}
                        </a>
                      </li>
                    ))}
                  </ul>
                </div>
              )}

              {pub.audioRequest && (
                <p class="pub-entry__audio">
                  <a href="/contatti#modulo">Per questo volume puoi richiedere i file audio cliccando qui</a>
                </p>
              )}
            </div>
          </section>
        );
      })}
    </div>
  </article>
</BaseLayout>