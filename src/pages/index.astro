---
import BaseLayout from "../layouts/BaseLayout.astro";
import Divider from "../components/Divider.astro";

const publications = [
  {
    title: "Double Bass Scales - Volume I",
    img: "/img/claudio_marzolo_pubblicazioni_double_bass_scales_volume_1-150x150.jpg",
    href: "/pubblicazioni",
  },
  {
    title: "Double Bass Scales - Volume II",
    img: "/img/claudio_marzolo_pubblicazioni_double_bass_scales_volume_2-150x150.jpg",
    href: "/pubblicazioni",
  },
  {
    title: "Double Bass Arpeggios",
    img: "/img/claudio_marzolo_pubblicazioni_double_bass_arpeggios-150x150.jpg",
    href: "/pubblicazioni",
  },
  {
    title: "Double Bass Arpeggios - Volume II",
    img: "/img/claudio_marzolo_pubblicazioni_double_bass_arpeggios_volume_2-150x150.jpg",
    href: "/pubblicazioni",
  },
  {
    title: "Double Bass Scales - Advanced Volume I",
    img: "/img/claudio_marzolo_pubblicazioni_double_bass_scales_advanced_volume_1-150x150.jpg",
    href: "/pubblicazioni",
  },
  {
    title: "Double Bass Scales - Advanced Volume II",
    img: "/img/claudio_marzolo_pubblicazioni_double_bass_scales_advanced_volume_2-150x150.jpg",
    href: "/pubblicazioni",
  },
  {
    title: "Basic Jazz - Volume I",
    img: "/img/claudio_marzolo_pubblicazioni_basic_jazz_volume_1-150x150.jpg",
    href: "/pubblicazioni",
  },
  {
    title: "Basic Jazz - Volume II",
    img: "/img/claudio_marzolo_pubblicazioni_basic_jazz_volume_2-150x150.jpg",
    href: "/pubblicazioni",
  },
  {
    title: "Intermediate Jazz - Volume III",
    img: "/img/claudio_marzolo_pubblicazioni_intermediate_jazz_volume_3-150x150.jpg",
    href: "/pubblicazioni",
  },
  {
    title: "Intermediate Jazz - Volume IV",
    img: "/img/claudio_marzolo_pubblicazioni_intermediate_jazz_volume_4-150x150.jpg",
    href: "/pubblicazioni",
  },
];
---

<BaseLayout title="Home">
  <section class="page home">
    <figure class="hero">
      <img
        src="/img/intro_test3.jpg"
        alt=""
        width="1218"
        height="360"
        loading="eager"
        decoding="async"
      />
    </figure>

    <h2 class="home__manifesto">
      <span class="home__manifesto-lead">COLTA, POPOLARE, CLASSICA, JAZZ.</span>
      <span class="home__manifesto-sub"
        >UN MUSICISTA D'OGGI VIVE QUESTE ESPERIENZE E NON PUÒ FARE A MENO DI TROVARSI
        AL CONFINE DEI GENERI.</span
      >
    </h2>

    <Divider ornament />

    <section class="home-bio" aria-label="Biografie">
      <div class="home-bio__item">
        <p class="home-bio__label">Biografia completa di Claudio Marzolo</p>
        <a class="btn" href="/biografia">BIOGRAFIA</a>
      </div>

      <div class="home-bio__item">
        <p class="home-bio__label">Claudio Marzolo complete biography</p>
        <a class="btn" href="/biography">BIOGRAPHY</a>
      </div>
    </section>

    <Divider ornament />

    <section class="home-pubs" aria-labelledby="pubblicazioni">
      <h2 id="pubblicazioni" class="home-pubs__title">Pubblicazioni</h2>

      <div class="home-pubs__grid">
        {publications.map((pub) => (
          <a class="home-pub frame" href={pub.href} aria-label={pub.title} title={pub.title}>
            <img src={pub.img} alt={pub.title} width="150" height="150" loading="lazy" decoding="async" />
          </a>
        ))}
      </div>
    </section>

    <p class="home-contact">
      <a href="/contatti#modulo">
        Se hai acquistato uno dei volumi in cui è necessario richiedere i file audio clicca qui
      </a>
    </p>
  </section>
</BaseLayout>