---
import BaseLayout from "../layouts/BaseLayout.astro";
import Divider from "../components/Divider.astro";

const publications = [
  {
    title: "Double Bass Scales - Volume I",
    img: "/img/claudio_marzolo_pubblicazioni_double_bass_scales_volume_1-150x150.jpg",
    href: "/pubblicazioni",
  },
  {
    title: "Double Bass Scales - Volume II",
    img: "/img/claudio_marzolo_pubblicazioni_double_bass_scales_volume_2-150x150.jpg",
    href: "/pubblicazioni",
  },
  {
    title: "Double Bass Arpeggios",
    img: "/img/claudio_marzolo_pubblicazioni_double_bass_arpeggios-150x150.jpg",
    href: "/pubblicazioni",
  },
  {
    title: "Double Bass Arpeggios - Volume II",
    img: "/img/claudio_marzolo_pubblicazioni_double_bass_arpeggios_volume_2-150x150.jpg",
    href: "/pubblicazioni",
  },
  {
    title: "Double Bass Scales - Advanced Volume I",
    img: "/img/claudio_marzolo_pubblicazioni_double_bass_scales_advanced_volume_1-150x150.jpg",
    href: "/pubblicazioni",
  },
  {
    title: "Double Bass Scales - Advanced Volume II",
    img: "/img/claudio_marzolo_pubblicazioni_double_bass_scales_advanced_volume_2-150x150.jpg",
    href: "/pubblicazioni",
  },
  {
    title: "Basic Jazz - Volume I",
    img: "/img/claudio_marzolo_pubblicazioni_basic_jazz_volume_1-150x150.jpg",
    href: "/pubblicazioni",
  },
  {
    title: "Basic Jazz - Volume II",
    img: "/img/claudio_marzolo_pubblicazioni_basic_jazz_volume_2-150x150.jpg",
    href: "/pubblicazioni",
  },
  {
    title: "Intermediate Jazz - Volume III",
    img: "/img/claudio_marzolo_pubblicazioni_intermediate_jazz_volume_3-150x150.jpg",
    href: "/pubblicazioni",
  },
  {
    title: "Intermediate Jazz - Volume IV",
    img: "/img/claudio_marzolo_pubblicazioni_intermediate_jazz_volume_4-150x150.jpg",
    href: "/pubblicazioni",
  },
];
---

<BaseLayout title="Home">

  <section class="home">
    <figure class="hero">
      <img
        src="/img/intro_test3.jpg"
        alt=""
        width="1218"
        height="360"
        loading="eager"
        decoding="async"
      />
    </figure>

    <h2 class="manifesto">
      <span class="manifesto__lead">COLTA, POPOLARE, CLASSICA, JAZZ.</span>
      <span class="manifesto__sub"
        >UN MUSICISTA D'OGGI VIVE QUESTE ESPERIENZE E NON PUÒ FARE A MENO DI TROVARSI
        AL CONFINE DEI GENERI.</span
      >
    </h2>

    <div class="ornament">
      <Divider />
    </div>

    <section class="bio">
      <div class="bio__item">
        <p class="bio__label">Biografia completa di Claudio Marzolo</p>
        <a class="btn" href="/biografia">BIOGRAFIA</a>
      </div>

      <div class="bio__item">
        <p class="bio__label">Claudio Marzolo complete biography</p>
        <a class="btn" href="/biography">BIOGRAPHY</a>
      </div>
    </section>

    <div class="ornament">
      <Divider />
    </div>

    <section class="pubs" aria-labelledby="pubblicazioni">
      <h2 id="pubblicazioni" class="pubs__title">Pubblicazioni</h2>

      <div class="pubs__grid">
        {publications.map((pub) => (
          <a class="pub" href={pub.href} aria-label={pub.title} title={pub.title}>
            <img src={pub.img} alt={pub.title} width="150" height="150" loading="lazy" decoding="async" />
          </a>
        ))}
      </div>
    </section>

    <p class="contact">
      <a href="/contatti#modulo">
        Se hai acquistato uno dei volumi in cui è necessario richiedere i file audio clicca qui
      </a>
    </p>
  </section>

  <style>


    .hero {
      margin: 1.25rem auto 2rem;
      max-width: 980px;
    }

    .hero img {
      display: block;
      width: 100%;
      height: auto;
      border: 1px solid rgba(0, 0, 0, 0.08);
      box-shadow: 0 10px 24px rgba(0, 0, 0, 0.06);
      background: #fff;
    }

    .manifesto {
      margin: 0 auto 1.75rem;
      max-width: 60ch;
      text-align: center;
      text-transform: uppercase;
      letter-spacing: 0.06em;
      color: var(--ink);
      line-height: 1.35;
      font-size: clamp(1.05rem, 2.35vw, 1.65rem);
    }

    .manifesto__lead,
    .manifesto__sub {
      display: block;
    }

    .manifesto__sub {
      margin-top: 0.35rem;
      font-size: 0.92em;
    }

    .ornament > :global(div) {
      position: relative;
    }

    .ornament > :global(div)::after {
      content: "❦";
      position: absolute;
      left: 50%;
      top: 50%;
      transform: translate(-50%, -50%);
      padding: 0 0.8rem;
      background: var(--paper);
      color: rgba(162, 126, 79, 0.55);
      line-height: 1;
      font-size: 1.25rem;
      letter-spacing: 0;
      pointer-events: none;
    }

    .bio {
      display: flex;
      gap: 2.5rem;
      justify-content: space-between;
      align-items: flex-start;
      flex-wrap: wrap;
      margin: 2.25rem 0;
    }

    .bio__item {
      flex: 1 1 260px;
      text-align: center;
    }

    .bio__label {
      margin: 0 0 0.9rem;
      color: var(--muted);
      font-size: 0.98rem;
    }

    .home :global(.btn) {
      min-width: 12rem;
      text-align: center;
      border-radius: 2px;
    }

    .pubs {
      margin-top: 2.5rem;
    }

    .pubs__title {
      text-align: center;
      margin: 0;
    }

    .pubs__grid {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 1rem;
      margin: 2rem 0 2.25rem;
    }

    .pub {
      display: block;
      border: 1px solid rgba(0, 0, 0, 0.08);
      background: #fff;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
      transition: transform 120ms ease, box-shadow 120ms ease, border-color 120ms ease;
    }

    .pub:hover {
      transform: translateY(-1px);
      border-color: rgba(162, 126, 79, 0.45);
      box-shadow: 0 12px 26px rgba(0, 0, 0, 0.08);
    }

    .pub img {
      display: block;
      width: 150px;
      height: 150px;
    }

    .contact {
      margin: 0 0 0.5rem;
      text-align: center;
      font-size: clamp(1rem, 2vw, 1.25rem);
    }

    .contact a {
      color: var(--accent);
      text-decoration: none;
    }

    .contact a:hover {
      text-decoration: underline;
      text-underline-offset: 0.15em;
    }
  </style>
</BaseLayout>
