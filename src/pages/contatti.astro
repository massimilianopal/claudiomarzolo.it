---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Contatti" lang="it">
  <article class="page contact-page">
    <header class="page-head">
      <h1>Contatti</h1>

    </header>

    <figure class="hero frame">
      <img
        src="/img/header_contact2.jpg"
        alt=""
        width="1218"
        height="180"
        loading="eager"
        decoding="async"
      />
    </figure>

  

    <section id="modulo" class="contact-details" aria-label="Dettagli contatto">
      <div class="contact-row">
        <a
          class="contact-link"
          href="https://www.facebook.com/claudio.marzolo.contrabbassista/"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Seguimi su Facebook (apre in una nuova scheda)"
        >
          <span class="contact-icon" aria-hidden="true">f</span>
          <span class="contact-text">
            <strong>Seguimi su Facebook</strong>
            <span class="contact-meta">news &amp; aggiornamenti</span>
          </span>
        </a>
      </div>

      <div class="contact-row">
        <span class="contact-mail">
          <img
            src="/img/mail-icon2.png"
            alt=""
            width="30"
            height="30"
            loading="lazy"
            decoding="async"
          />
          <a href="mailto:marzoloclaudio@gmail.com">marzoloclaudio[@]gmail.com</a>
        </span>
      </div>
    </section>
  </article>
</BaseLayout>